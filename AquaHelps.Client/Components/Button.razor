@inject NavigationManager NavigationManager
<button 
    class="
        bg-blue-600 hover:bg-blue-500 rounded-lg shadow-blue-700 drop-shadow-xl flex-grow sm:flex-grow-0"
        @onclick="ClickHandler">
    <div class="text-white font-medium py-2 px-4 flex flex-row justify-center">
        @if(IconName is not null )
        {
            <ion-icon class="text-center py-1 pe-3" name="@IconName"></ion-icon>
        }
        @ButtonText</div>
</button>
@code {

    [Parameter] public string ButtonText { get; set; } = string.Empty;
    [Parameter] public string? IconName { get; set; }
    [Parameter] public string Page {get;set;} = string.Empty;
    private async Task ClickHandler(){
        if(!string.IsNullOrWhiteSpace(Page)){
            NavigationManager.NavigateTo(Page);
        }
    }
} 
